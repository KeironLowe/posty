{
  "name": "keironlowe/posty",
  "description": "Object orientated WordPress post type manager",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Keiron Lowe",
      "email": "keiron@keironlowe.co.uk"
    }
  ],
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Posty\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpstan/phpstan": "^0.12.35",
    "szepeviktor/phpstan-wordpress": "^0.6.2",
    "phpunit/phpunit": "^9",
    "brain/monkey": "^2.4"
  },
  "scripts": {
    "coverage": "vendor/bin/phpunit --coverage-html coverage-report"
  }
}
